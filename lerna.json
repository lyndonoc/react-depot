{
  "packages": [
    "packages/libs/*",
    "packages/apps/*"
  ],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish %s [skip ci]"
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true
}
